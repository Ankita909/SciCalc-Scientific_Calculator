<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idTVSecondary"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/idTVPrimary"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/idTVSecondary"
        android:background="@color/white"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idTVPrimary"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:background="@color/white">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

              <Button
                  android:id="@+id/idBtnAC"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="3dp"
                  android:layout_weight="1"
                  android:background="@color/black_shade_2"
                  android:padding="6dp"
                  android:text="AC"
                  android:textStyle="bold"
                  android:textColor="@color/red"
                  android:textSize="15sp">
              </Button>

              <Button
                  android:id="@+id/idBtnC"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="3dp"
                  android:layout_weight="1"
                  android:background="@color/black_shade_2"
                  android:padding="6dp"
                  android:text="x"
                  android:textStyle="bold"
                  android:textColor="@color/red"
                  android:textSize="15sp">
              </Button>

              <Button
                  android:id="@+id/idBtnBrac1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="3dp"
                  android:layout_weight="1"
                  android:background="@color/black_shade_2"
                  android:padding="6dp"
                  android:text="("
                  android:textStyle="bold"
                  android:textColor="@color/white"
                  android:textSize="15sp">
              </Button>

              <Button
                  android:id="@+id/idBtnBrac2"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_margin="3dp"
                  android:layout_weight="1"
                  android:background="@color/black_shade_2"
                  android:padding="6dp"
                  android:text=")"
                  android:textStyle="bold"
                  android:textColor="@color/white"
                  android:textSize="15sp">
              </Button>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtnSin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnCos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnTan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnLog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtnFact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="x!"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnSquare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="x^2"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnSquareRoot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="√
"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnInverse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnDiv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="/"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtn9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="9"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtn8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="8"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtn7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="7"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnMultiply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="x"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtn6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="6"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtn5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="5"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtn4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="4"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnMinus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="-"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtn3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="3"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="2"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="1"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnPlus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="+"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idBtnPi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:text="π "
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/idBtn0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnDecimal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="."
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>

                <Button
                    android:id="@+id/idBtnEqual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_shade_2"
                    android:padding="6dp"
                    android:text="="
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15sp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>